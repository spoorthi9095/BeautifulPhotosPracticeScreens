<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ckout"
    android:background="@drawable/aflower"
    tools:context=".CheckoutFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout

            android:id="@+id/appbarinfrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarinCart"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/appbarinfrag"
            android:background="#98e9e8e7"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Product Summary"
                android:textColor="#FF7373"
                android:id="@+id/textView"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/imageView2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Collage Poster"
                android:textSize="14dp"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:layout_below="@+id/imageView2"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8 x 8"
                android:textSize="14dp"
                android:id="@+id/textView2"
                android:layout_below="@+id/textView3"
                android:layout_centerHorizontal="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:id="@+id/view"
                android:layout_below="@+id/imageButton"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageButton2"
                android:src="@drawable/ic_add_circle_outline_black_24dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:padding="0dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:layout_below="@+id/textView2"
                android:layout_toStartOf="@+id/imageView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/no_of_copies"
                android:textSize="16dp"
                android:text="1 x Rs.250"
                android:layout_alignBottom="@+id/imageButton"
                android:layout_centerHorizontal="true" />


            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageButton"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_remove_circle_outline_black_24dp"
                android:layout_below="@+id/textView2"
                android:scaleType="centerCrop"
                android:padding="0dp"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/textView" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cart Sub Total"
                android:textSize="16dp"
                android:id="@+id/textView4"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/view"
                android:layout_toEndOf="@+id/textView12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Tax"
                android:id="@+id/textView5"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/textView4"
                android:layout_alignEnd="@+id/textView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Rs. 250.00"
                android:id="@+id/textView6"
                android:textStyle="bold"
                android:layout_alignTop="@+id/textView4"
                android:layout_toEndOf="@+id/imageView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Rs. 00.00"
                android:id="@+id/textView7"
                android:textStyle="bold"
                android:layout_alignTop="@+id/textView5"
                android:layout_alignEnd="@+id/textView6" />

            <View
                android:layout_width="280dp"
                android:layout_height="2dp"
                android:background="#FF7373"
                android:id="@+id/view2"
                android:layout_alignEnd="@+id/textView11"
                android:layout_below="@+id/textView12"
                android:layout_alignStart="@+id/textView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="TOTAL"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/textView10"
                android:textStyle="bold"
                android:layout_below="@+id/view2"
                android:layout_alignEnd="@+id/textView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Rs. 299.00"
                android:textSize="20dp"
                android:id="@+id/textView11"
                android:layout_alignTop="@+id/textView10"
                android:layout_alignEnd="@+id/textView7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Free Shipping)"
                android:textSize="12dp"
                android:id="@+id/textView12"
                android:textColor="#9D9C9A"
                android:layout_below="@+id/textView5"
                android:layout_toStartOf="@+id/textView" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_marginTop="10dp"
                android:id="@+id/view4"
                android:layout_below="@+id/textView10"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="CHECKOUT"
                android:textColor="@color/white"
                android:layout_marginBottom="30dp"
                android:background="@drawable/rounded_corner_btn"
                android:id="@+id/chekout_btn"
                android:layout_below="@+id/view4"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
